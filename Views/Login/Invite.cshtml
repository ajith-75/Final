@{
	ViewData["Title"] = "Wedding Invitation";
	var name = ViewBag.UserName;
	Layout = null;
}
<!DOCTYPE html>
<html lang="ta">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@ViewData["Title"]</title>

	<!-- Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@400;600&family=Pacifico&display=swap" rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


	<style>
		body {
			margin: 0;
			padding: 0;
			background: linear-gradient(to bottom right, #fff0f5, #fef6e4);
			font-family: 'Vazirmatn', sans-serif;
			color: #333;
			position: relative;
		}

		.invitation-container {
			max-width: 750px;
			margin: 40px auto;
			background: #fff9f9;
			padding: 40px 30px;
			border: 5px double #ffb6c1;
			border-radius: 15px;
			box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
			text-align: center;
			position: relative;
			z-index: 1;
		}

		h2.title {
			font-size: 2.8em;
			color: #d63384;
			margin-bottom: 20px;
		}

		h2.welcome {
			font-size: 1.8em;
			color: #28a745;
			margin-bottom: 25px;
		}

		.guest-name {
			color: #0d6efd;
			font-weight: bold;
		}

		h3 {
			font-size: 1.4em;
			color: #6f42c1;
			margin-bottom: 5px;
		}

		.name {
			font-family: 'Pacifico', cursive;
			font-size: 1.6em;
			margin: 0;
			padding: 5px;
		}

		.groom {
			color: #007bff;
		}

		.bride {
			color: #e83e8c;
		}

		.login-container {
			position: relative; /* Required for absolute positioning inside */
			/* ...existing styles... */
		}

		.dev-credit {
			position: absolute;
			bottom: 10px;
			right: 15px;
			font-size: 0.75em;
			color: #555;
		}

		p {
			font-size: 1.1em;
			line-height: 1.6;
			margin-bottom: 15px;
		}

		.highlight {
			color: #dc3545;
			font-weight: bold;
		}

		.divider {
			margin: 25px auto;
			width: 60%;
			border-top: 2px dashed #aaa;
		}

		.section-box {
			border: 2px dashed #ffcad4;
			padding: 40px 30px;
			border-radius: 10px;
			margin: 40px auto;
			background: #fff0f5;
		}

		.cracker-container {
			position: fixed;
			bottom: 0;
			width: 80px;
			height: 100vh;
			z-index: 9999;
			pointer-events: none;
			overflow: visible;
		}

		.left-cracker {
			left: 20px;
		}

		.right-cracker {
			right: 20px;
		}

		.spark {
			position: absolute;
			width: 8px;
			height: 8px;
			border-radius: 50%;
			background-color: red;
			animation: sparkBlast 1s ease-out forwards;
		}

		@@keyframes sparkBlast {
			0% {
				transform: translate(0, 0) scale(1);
				opacity: 1;
			}

			100% {
				transform: translate(var(--x), var(--y)) scale(0.1);
				opacity: 0;
			}
		}

		@@page {
			size: A4 portrait;
			margin: 1.5cm;
		}

		@@media print {
			body {
				background: white !important;
				color: black;
			}

			.cracker-container,
			button,
			script {
				display: none !important;
			}

			.invitation-container {
				box-shadow: none;
				border: 2px solid #999;
				margin: 0;
				padding: 30px;
				page-break-inside: avoid;
			}

			.section-box {
				background: none;
				border: 1px dashed #aaa;
			}
		}


		@@media (max-width: 600px) {
			.invitation-container {
				padding: 25px 20px;
			}

			h2.title {
				font-size: 2em;
			}

			.name {
				font-size: 1.3em;
			}

			.section-box {
				padding: 15px;
			}
		}
	</style>
</head>
<body>

	<div class="invitation-container p-4 my-4">
		<h3 class="fs-3 fw-bold text-center text-danger">💐 தமிழர் கல்யாண அழைப்பிதழ் 💐</h3>
