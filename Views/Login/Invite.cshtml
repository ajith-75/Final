		</div>
		<p class="dev-credit">Developed by Ajith 😄</p>
	</div>

	<!-- Crackers -->
	<div class="cracker-container left-cracker"></div>
	<div class="cracker-container right-cracker"></div>
	<p style="margin-top:30px; text-align:center;">
		<button onclick="window.print()" style="
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 25px;
        font-size: 1.1em;
        border-radius: 8px;
        cursor: pointer;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 123, 255, 0.5);
        transition: transform 0.2s, box-shadow 0.2s;
	">
			அச்சிடுங்கள்
		</button>
	</p>


</body>
</html>
<script>
	function createBlast(containerSelector) {
		const container = document.querySelector(containerSelector);
		if (!container) return;

		for (let i = 0; i < 25; i++) {
			const spark = document.createElement('div');
			spark.className = 'spark';

			// Random color
			const colors = ['#ff3e3e', '#ffdd00', '#00ffd5', '#00ff00', '#ff00e6'];
			spark.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];

			// Random direction and distance
			const angle = Math.random() * 2 * Math.PI;
			const distance = Math.random() * 100 + 80;
			const x = Math.cos(angle) * distance + 'px';
			const y = Math.sin(angle) * distance - window.innerHeight / 2 + 'px';

			spark.style.setProperty('--x', x);
			spark.style.setProperty('--y', y);

			container.appendChild(spark);

			setTimeout(() => {
				spark.remove();
			}, 1000);
		}
	}

	// Repeat the cracker burst
	setInterval(() => {
		createBlast('.left-cracker');
		createBlast('.right-cracker');
	}, 1500);
</script>




